<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la actividad -->
        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Descripción de la aplicación -->
        <TextView
            android:id="@+id/about_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#666666"
            android:paddingBottom="24dp" />

        <!-- Sección de reglas del juego -->
        <TextView
            android:id="@+id/about_rules_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_rules_title"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/about_rules_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_rules_description"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#666666"
            android:paddingBottom="24dp" />

        <!-- Sección de creadores -->
        <TextView
            android:id="@+id/about_creators_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_creators_title"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <!-- Primer creador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/creator1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/creator1_name"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/creator1_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creator1_link"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Segundo creador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creator2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/creator2_name"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/creator2_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creator2_link"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
